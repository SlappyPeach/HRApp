<Window x:Class="HRApp.Views.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Курс повышения квалификации"
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="0">
            <TextBox x:Name="CourseTypeTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Тип (повышение, переподготовка)"/>
            <TextBox x:Name="InstitutionTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Учебное заведение"/>
            <TextBox x:Name="CertificateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Документ (удостоверение, диплом)"/>
            <TextBox x:Name="StartDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата начала (дд.мм.гггг)"/>
            <TextBox x:Name="EndDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата окончания (дд.мм.гггг)"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
