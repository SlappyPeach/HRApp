<Window x:Class="HRApp.Views.MoveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Перевод сотрудника" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Оформление перевода" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Поля -->
        <StackPanel Grid.Row="1">
            <ComboBox x:Name="EmployeeComboBox" Margin="0,5"
                      materialDesign:HintAssist.Hint="Выберите сотрудника"/>
            <TextBox x:Name="NewDepartmentTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Новый отдел"/>
            <TextBox x:Name="NewPositionTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Новая должность"/>
            <TextBox x:Name="MoveDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата перевода (дд.мм.гггг)"/>
            <TextBox x:Name="BaseTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Основание"/>
            <TextBox x:Name="MoveTypeTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Тип перевода (постоянный/временный)"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Экспорт" Click="ExportButton_Click" Margin="5"/>
            <Button Content="Закрыть" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
