<Window x:Class="HRApp.Views.CertificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Аттестация" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оформление аттестации" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Поля -->
        <StackPanel Grid.Row="1">
            <ComboBox x:Name="EmployeeComboBox" Margin="0,5"
                      materialDesign:HintAssist.Hint="Выберите сотрудника"/>
            <TextBox x:Name="DateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата аттестации (дд.мм.гггг)"/>
            <TextBox x:Name="ResolutionTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Решение комиссии"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,5"
          materialDesign:HintAssist.Hint="Категория">
                <ComboBoxItem Content="Высшая"/>
                <ComboBoxItem Content="Первая"/>
                <ComboBoxItem Content="Соответствие должности"/>
            </ComboBox>
            <TextBox x:Name="DocNumberTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Номер документа"/>
            <TextBox x:Name="DocDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата документа (дд.мм.гггг)"/>
            <TextBox x:Name="BaseTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Основание"/>
            <TextBox x:Name="NextDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата следующей аттестации"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
