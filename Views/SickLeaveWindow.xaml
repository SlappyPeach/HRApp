<Window x:Class="HRApp.Views.SickLeaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Больничный" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оформление больничного" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Поля -->
        <StackPanel Grid.Row="1">
            <ComboBox x:Name="EmployeeComboBox" Margin="0,5"
                      materialDesign:HintAssist.Hint="Выберите сотрудника"/>
            <TextBox x:Name="RegNumberTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Номер больничного"/>
            <TextBox x:Name="RegDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата выдачи (дд.мм.гггг)"/>
            <TextBox x:Name="FromDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата начала (дд.мм.гггг)"/>
            <TextBox x:Name="ToDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата окончания (дд.мм.гггг)"/>
            <TextBox x:Name="InfoTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дополнительная информация"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Экспорт" Click="ExportButton_Click" Margin="5"/>            
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
