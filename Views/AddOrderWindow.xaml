<Window x:Class="HRApp.Views.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавить приказ" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление приказа" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1">
            <ComboBox x:Name="EmployeeComboBox" Margin="0,5"
                      materialDesign:HintAssist.Hint="Выберите сотрудника"/>
            <TextBox x:Name="StartDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата начала (дд.мм.гггг)"/>
            <TextBox x:Name="RegNumberTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Номер приказа"/>
            <TextBox x:Name="DocDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата документа (дд.мм.гггг)"/>
            <TextBox x:Name="BaseTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Основание"/>
            <TextBox x:Name="ContentTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Содержание приказа"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
