<Window x:Class="HRApp.Views.VacationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Отпуск" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Оформление отпуска" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Поля -->
        <StackPanel Grid.Row="1">
            <ComboBox x:Name="EmployeeComboBox" Margin="0,5"
                      materialDesign:HintAssist.Hint="Выберите сотрудника"/>
            <TextBox x:Name="StartDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата начала (дд.мм.гггг)"/>
            <TextBox x:Name="EndDateTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Дата окончания (дд.мм.гггг)"/>
            <TextBox x:Name="DaysTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Количество календарных дней"/>
            <TextBox x:Name="BaseTextBox" Margin="0,5"
                     materialDesign:HintAssist.Hint="Основание"/>
            <ComboBox x:Name="VacationTypeComboBox" Margin="0,5"
                        materialDesign:HintAssist.Hint="Вид отпуска">
                <ComboBoxItem Content="Ежегодный"/>
                <ComboBoxItem Content="Основной оплачиваемый отпуск"/>
                <ComboBoxItem Content="Ежегодный дополнительный оплачиваемый отпуск"/>
                <ComboBoxItem Content="Учебный"/>
                <ComboBoxItem Content="Без сохранения заработной платы"/>
                <ComboBoxItem Content="Отпуск по уходу за ребёнком до 3 лет"/>
                <ComboBoxItem Content="Отпуск по уходу за инвалидом"/>
            </ComboBox>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Экспорт DOCX" Click="ExportButton_Click" Margin="5"/>
            <Button Content="Отмена" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
